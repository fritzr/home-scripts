#!/bin/bash
# Run fortran tests.
#
if [ x"$GCCBLD" != x"" -a -d "$GCCBLD" ]; then
  cd $GCCBLD
fi

make -sk -j4 check-fortran $* 2>&1 | tee test.log \
  | colorize.py -Runexpected -g' expected' -yunresolved -yunsupported -RFAIL
grep -q 'unexpected' test.log
if [ $? = 0 ]; then
  exec notify 2
else
  exec notify 5
fi
